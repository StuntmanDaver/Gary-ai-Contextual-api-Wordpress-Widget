{
  "name": "gary-ai/wordpress-chatbot",
  "description": "Context-aware chatbot plugin for WordPress, powered by Contextual AI.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Gary AI Team",
      "email": "support@garyai.example",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "GaryAI\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GaryAI\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpstan analyse --memory-limit=-1"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
